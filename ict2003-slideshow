--background=background.png \
--shortcuticon=icon-default.png \
--slideshow \
--head=head.html \
--tail=tail.html \
--fullwidth=1024 \
--fullheight=768 \
--enumerate \
\
--block="Day 1 - Travel to Tahiti" \
"/tmp/photo-archive/ict2003/Tahiti, Tag 01"/*.@(jpg|JPG|jpeg|JPEG) \
\
--block="Day 2 - At the Conference Hotel" \
"/tmp/photo-archive/ict2003/Tahiti, Tag 02"/*.@(jpg|JPG|jpeg|JPEG) \
