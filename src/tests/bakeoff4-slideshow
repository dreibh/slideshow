#!/usr/bin/env bash
shopt -s extglob

./slideshow2 \
--directory=bakeoff4 \
--maintitle="The 4th SCTP Interop" --maindescription=bakeoff4-maintitle.html \
--stylesheet=stylesheet.css \
--background=background.png \
--shortcuticon=icon-default.png \
--slideshow \
--head=head.html \
--tail=tail.html \
--fullsizewidth=1280 \
--fullsizeheight=960 \
--enumerate \
--noindex \
--columns=4 \
"/tmp/photo-archive/connectathon2002"/*.@(jpg|JPG|jpeg|JPEG) \
$@ \
--
